<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama Bank</th>
                        <th>Nomor Rekening</th>
                        <th>Nama Pemilik</th>
                        <th>Gambar / Logo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < bank.length; i++) { %>
                        <tr>
                            <th><%= i + 1 %></th>
                            <th><%= bank[i].nameBank %></th>
                            <th><%= bank[i].nomorRekening %></th>
                            <th><%= bank[i].name %></th>
                            <th>
                                <img src="http://my-staycation-admin.herokuapp.com/<%= bank[i].imageUrl %>" class="rounded mx-auto d-block" alt="imageUrl" width="auto" height="40px">
                            </th>
                            <th>
                                <form action="/admin/bank/<%= bank[i].id %>?_method=DELETE" method="POST">
                                    <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= bank[i].id %>" data-bankname="<%= bank[i].nameBank %>" data-accountnumber="<%= bank[i].nomorRekening %>" data-name="<%= bank[i].name %>">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                </form>
                            </th>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- End of DataTables -->