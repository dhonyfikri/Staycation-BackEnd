<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Invoice</th>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Member Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < booking.length; i++) { %>
                        <tr>
                            <th><%= i + 1 %></th>
                            <th>#<%= booking[i].invoice %></th>
                            <th><%= booking[i].bookingStartDate.toLocaleString().split(", ")[0] %> s/d <%= booking[i].bookingEndDate.toLocaleString().split(", ")[0] %></th>
                            <th><%= booking[i].itemId.title %></th>
                            <th><%= booking[i].memberId.firstName %> <%= booking[i].memberId.lastName %></th>
                            <th><%= booking[i].payments.status %></th>
                            <th>
                                <a href="/admin/booking/<%= booking[i].id %>" class="btn btn-success btn-circle btn-sm button-update">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </th>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- End of DataTables -->